{
  "name": "@velo-sci/sci-math-wasm",
  "version": "1.0.4",
  "description": "High-performance scientific mathematical functions for WebAssembly",
  "type": "module",
  "main": "./pkg/web/sci_math_wasm.js",
  "module": "./pkg/web/sci_math_wasm.js",
  "types": "./pkg/web/sci_math_wasm.d.ts",
  "exports": {
    ".": {
      "types": "./pkg/web/sci_math_wasm.d.ts",
      "node": "./pkg/node/sci_math_wasm.js",
      "import": "./pkg/web/sci_math_wasm.js",
      "default": "./pkg/web/sci_math_wasm.js"
    },
    "./snippets/*": "./pkg/web/snippets/*"
  },
  "files": [
    "pkg/web",
    "README.md"
  ],
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "node scripts/fix-wasm-workers.js && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "wasm:build:node": "wasm-pack build --target nodejs --out-dir pkg/node --release -- --features threads,console_error_panic_hook",
    "wasm:build:web": "wasm-pack build --target web --out-dir pkg/web --release -- --features wasm-threads && node scripts/fix-wasm-workers.js && node scripts/wrap-wasm.cjs",
    "wasm:build": "pnpm wasm:build:node && pnpm wasm:build:web",
    "test": "pnpm test:ts",
    "test:ts": "pnpm wasm:build:node && node scripts/fix-pkg.cjs && vitest run",
    "bench:ts": "pnpm wasm:build:node && node scripts/fix-pkg.cjs && vitest bench"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "katex": "^0.16.28",
    "markdown-it-katex": "^2.0.3",
    "vite": "^7.3.1",
    "vite-plugin-wasm": "^3.4.1",
    "vitepress": "^1.0.0-rc.31",
    "vitest": "^2.1.3",
    "vue": "^3.5.27"
  }
}
